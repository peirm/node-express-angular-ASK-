
<!--主体内容-->
<main>
    <div class="container">
        <!--内容左部分-->
        <div class="col-lg-9 main-left">
            <!--标题-->
            <div class="title">
                <a href="#" class="pull-left discover">
                    <span class="fa fa-credit-card"></span>
                    发起
                </a>
            </div>
            <div class="body">
                <form action="">
                    <!--问题的分类-->
                    <div class="different">
                        <p>问题的分类: </p>
                        <select name="" id="">
                            <option value="">请选择</option>
                            <option value="share">分享</option>
                            <option value="ask">问答</option>
                            <option value="job">招聘</option>
                        </select>
                        <div class="text-danger hide">
                            <span class="glyphicon glyphicon-info-sign"></span>
                            请正确选择板块
                        </div>
                    </div>
                    <!--问题的标题-->
                    <div class="headline">
                        <p>问题的标题: </p>
                        <input type="text" placeholder="问题标题... ">
                        <div class="text-danger hide">
                            <span class="glyphicon glyphicon-info-sign"></span>
                            问题的长度不能小于10个字符或者大于50个字符
                        </div>
                    </div>
                    <!--问题补充-->
                    <div class="supplement">
                        <p>问题补充: </p>
                        <textarea class="markdown" name="" id="question" placeholder="问题支持markdown格式,请注意标记代码"></textarea>
                        <div class="text-danger hide">
                            <span class="glyphicon glyphicon-info-sign"></span>
                            内容不能为空
                        </div>
                    </div>
                    <!--发布按钮-->
                    <div class="submit clearfix">
                        <input type="submit" value="发布问题" class="pull-right">
                    </div>
                    <div></div>
                </form>
            </div>
        </div>
        <div class="col-lg-3 main-right">

        </div>
    </div>
</main>

<script>
    $(function () {
        // 开启markdown
        const simplemde = new SimpleMDE({
            element: $("#question")[0] ,
            status:false,
            styleSelectedText:false,
        });
    })
</script>
