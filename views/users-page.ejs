<% users.forEach(function(user, index) { %>
<li>
    <% if((pageNum - 1) * 5 + index + 1 <= 3) { %>
    <span style="font-size: 40px; margin-left: -3px !important;" class="fa fa-bookmark pull-left head-icon"></span>
    <% } else { %>
    <span class="fa fa-bookmark pull-left head-icon"></span>
    <% } %>
    <span class="ranking pull-left"><%= (pageNum - 1) * 5 + index + 1 %></span>
    <a class="pull-left" href="/user/<%= user.name %>"><img src="<%= user.avatar %>" alt=""></a>
    <div class="list-text">
        <h4>
            <a href="/user/<%= user.name %>"><%= user.name %></a>
        </h4>
        <div class="meta">
            <a href="javascript:;">
                <span class="fa fa-bar-chart-o"></span>
                积分<b><%= user.score %></b>
            </a>
            <a href="javascript:;">
                <span class="fa fa-thumbs-o-up"></span>
                点赞<b>110</b>
            </a>
            <a href="javascript:;">
                <span class="fa fa-heart-o"></span>
                感谢
            </a>
        </div>
        <p>个性签名: <span><%= user.motto %></span></p>
        <span class="users-follow-btn"><a href="#">关注&nbsp;&nbsp;|&nbsp;&nbsp;<span class="follow-num">22</span></a></span>
    </div>
</li>
<% }) %>