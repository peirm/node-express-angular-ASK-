<!--主体内容-->
<main ng-app="questionApp" ng-controller="questionController">
    <div class="container">
        <!--左部分-->
        <div class="col-lg-9 main-left">
            <div class="detail-all">
                <div class="detail-share">
                    <span class="detail-allShare"><a href="#"><%= question.categoryName %></a></span>
                </div>
                <!--标题-->
                <div class="detail-title">
                    <h1><%= question.title %></h1>
                    <span class="detail-follow-btn"><a href="#">关注&nbsp;&nbsp;|&nbsp;&nbsp;<span class="follow-num">0</span></a></span>
                </div>
                <!--内容-->
                <div class="detail-content"><%- markdown(question.content) %></div>
                <!--对内容操作-->
                <div class="detail-option">
                    <span><%= question.create_time_ago() %></span>&#x3000;
                    <span><%= question.click_num %> 次浏览</span>&#x3000;
                    <a href="/question/:id/edit"><span class="fa fa-edit"></span> 编辑</a>&#x3000;
                    <a href="#"><span class="fa fa-remove"></span> 删除</a>
                    <a class="pull-right" href=""><span class="fa fa-share-square-o"></span> 分享</a>
                </div>
                <!--回复表单区域-->
                <div class="leaveMessage">
                    <form id="reply_form" target="/<%= question._id %>/reply" ng-submit="postForm()">
                        <div class="leave-head">
                            <a href="/user/<%= user.name %>"><img src="<%= user.avatar %>" alt=""></a>
                            <span><%= user.name %></span>
                        </div>
                        <div class="leave-body">
                            <textarea class="markdown" name="" id="question" cols="30" rows="10"></textarea>
                        </div>
                        <div class="leave-foot"><input id="reply-button" type="submit" class="pull-right" value="提交回答"></div>
                    </form>
                </div>
            </div>
        </div>
        <!--右部分-->
        <div class="col-lg-3 main-right">
            <!--发起人板块-->
            <div class="message">
                <h4>发起人</h4>
                <div>
                    <img class="pull-left" src="<%= question.author.avatar %>" alt="">
                    <a href="#"><%= question.author.name %></a></span>
                    <a href="#" class="more pull-right">关注</a>
                </div>
                <p><%= question.author.motto %></p>
            </div>
            <!--相关问题板块-->
            <div class="hot">
                <h4>相关问题</h4>
                <% others.forEach(function (other) { %>
                <p>
                    <a href="/question/<%= other._id %>"><%= other.title %></a>
                </p>
                <% }) %>
            </div>
            <!--其它版块-->
            <div class="other">
                <h4>其它的板块</h4>
            </div>
        </div>
    </div>
</main>

