

<!--主体内容-->
<main ng-app="settingApp" ng-controller="settingController">
    <div class="container">
        <div class="main-title">
            <h4>
                <span class="fa fa-cog"></span> 用户设置
            </h4>
        </div>
        <div class="main-body">
            <form id="<%= user._id %>" name="settingForm" ng-submit="postForm()">
                <h3>基本信息</h3>
                <div class="message-data clearfix">
                    <!--基本信息-->
                    <div class="col-lg-8">
                        <dl class="clearfix">
                            <dt>账号: &nbsp;</dt>
                            <dd><%= user.name %></dd>
                        </dl>
                        <dl class="clearfix">
                            <dt>邮箱: &nbsp;</dt>
                            <dd><%= user.email %></dd>
                        </dl>
                        <dl class="clearfix">
                            <dt><label for="">个性签名: &nbsp;</label></dt>
                            <dd>
                                <textarea name="motto" cols="40" rows="6" placeholder="这家伙很懒, 什么都没留下.."
                                          ng-maxlength="150" ng-model="formData.motto" required><%= user.motto %></textarea>
                                <div style="height: 20px;">
                                    <label ng-cloak ng-show="settingForm.motto.$invalid && !settingForm.motto.$pristine">
                                        <span class="glyphicon glyphicon-info-sign"></span>
                                        请填写正确的个性签名
                                    </label>
                                </div>
                            </dd>
                        </dl>
                    </div>
                    <!--上传头像-->
                    <div class="col-lg-4">
                        <div>
                            <dl class="clearfix">
                                    <dt>
                                            <!--<img class="img" id='picImg' src="<%= user.avatar %>" alt="">-->
                                            <input id="avatar" name="avatar" type="file" target="<%= user.avatar %>" value="上传图片">
                                    </dt>
                                    <dd>
                                        <p>头像设置</p>
                                        <p>支持jpg、gif、png等格式的图片(其他的图片格式不支持)</p>
                                        <!--<div id="upload" class="upload"><span class="fa fa-image"></span>上传图片</div>-->
                                    </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="message-button">
                    <input class="setting-button" type="submit" value="提交">
                </div>
            </form>
        </div>
    </div>
</main>
<link rel="stylesheet" href="/plugins/fileinput/css/fileinput.min.css">
<script src="/plugins/fileinput/js/fileinput.min.js"></script>
<script src="/plugins/fileinput/js/locales/zh.js"></script>